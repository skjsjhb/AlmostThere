#version 330 core
layout (location = 0) in vec2 aPos;
layout (location = 1) in vec2 aTexCoord;
out vec2 texCoord;

void main() {
    gl_Position = vec4(aPos, 0, 1.0);
    texCoord = aTexCoord;
}

// ---

#version 330 core
in vec2 texCoord;
out vec4 color;

uniform sampler2D aTex;

void main () {
    float dim = 0.35;
    color = texture(aTex, texCoord) * vec4(dim, dim, dim, 1);
    if(color.a == 0) {
        discard;
    }
}
