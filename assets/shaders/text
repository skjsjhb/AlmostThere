#version 330
layout (location = 0) in vec4 vert;
out vec2 tex;

uniform mat4 proj;

void main()
{
    gl_Position = proj * vec4(vert.xy, 0, 1);
    gl_Position.z = -0.95;
    tex = vert.zw;
}

// ---

#version 330 core
in vec2 tex;
out vec4 color;

uniform sampler2D baseTex;
uniform vec3 tColor;

void main()
{    
    color = vec4(1.0, 1.0, 1.0, 1.0);
    vec4 sampled = vec4(1.0, 1.0, 1.0, texture(baseTex, tex).r);
    color = vec4(tColor, 1.0) * sampled;
}  